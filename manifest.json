{
  "manifest_version": 3,
  "name": "FitGenie",
  "description": "Gemini-powered virtual try-on assistant that helps shoppers visualize outfits on their own photo.",
  "version": "0.0.1",
  "minimum_chrome_version": "120",
  "action": {
    "default_popup": "popup.html",
    "default_title": "FitGenie Virtual Try-On"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-scripts/product-selector.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/**"],
      "matches": ["<all_urls>"]
    }
  ]
}

